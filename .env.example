# Weather API Configuration
# Copy this file to .env and fill in your values

# OpenWeatherMap API Configuration (REQUIRED)
OPENWEATHER_KEY=your_openweather_api_key_here

# Location Configuration (REQUIRED)
LATITUDE=42.49976388133817
LONGITUDE=-83.14764182368776
LOCATION_NAME="Royal Oak, MI"

# Server Configuration
PORT=4000
NODE_ENV=development

# Security Configuration (OPTIONAL)
# Security profile: development, production, or strict
SECURITY_PROFILE=development

# Rate Limiting (OPTIONAL)
# Time window in minutes (default: 60 for dev, 15 for production)
RATE_LIMIT_WINDOW_MINUTES=60
# Maximum requests per window (default: 1000 for dev, 100 for production)
RATE_LIMIT_MAX_REQUESTS=1000
# Custom rate limit message
RATE_LIMIT_MESSAGE="Too many requests from this IP, please try again later."

# CORS Configuration (OPTIONAL)
# Comma-separated list of allowed origins, or 'false' to disable, or '*' for all
CORS_ORIGIN="http://localhost:3000,http://localhost:4000"
# Set to 'false' to disable CORS entirely
CORS_ENABLED=true

# Security Headers (OPTIONAL)
# Set to 'false' to disable security headers
HELMET_ENABLED=true

# Examples for different environments:

# Development (default):
# SECURITY_PROFILE=development
# RATE_LIMIT_MAX_REQUESTS=1000
# CORS_ORIGIN="http://localhost:3000,http://localhost:4000"

# Production:
# NODE_ENV=production
# SECURITY_PROFILE=production
# RATE_LIMIT_MAX_REQUESTS=100
# CORS_ORIGIN="https://yourdomain.com"

# Strict security:
# SECURITY_PROFILE=strict
# RATE_LIMIT_MAX_REQUESTS=50
# CORS_ORIGIN="https://yourdomain.com"
